  commonName: any.common.name
  isCA: true
  dnsNames:
    - >- 
      *.${CLUSTER_DOMAIN}
  secretName: sample-java-app-self-signed-ca-cert
  issuerRef:
    group: cert-manager.io
    kind: ClusterIssuer
    name: selfsigned-cluster-issuer
